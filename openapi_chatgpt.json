{
  "openapi": "3.1.0",
  "info": {
    "title": "MySalonCast API",
    "description": "AI-powered podcast generation platform. Extract text from PDFs, generate engaging podcasts with multiple personas, track progress, and stream audio. Perfect for content creators and educators.",
    "contact": {
      "name": "MySalonCast Support",
      "email": "support@mysaloncast.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://mcp-server-production-644248751086.us-west1.run.app",
      "description": "Production server"
    }
  ],
  "paths": {
    "/process/pdf/": {
      "post": {
        "tags": [
          "content"
        ],
        "summary": "Extract Text from PDF",
        "description": "Extract text content from a PDF document for podcast generation.\n\nUpload a PDF file to extract readable text content. Returns filename, \nextraction status, text snippet preview, and total character count.",
        "operationId": "process_pdf_endpoint_process_pdf__post",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Body_process_pdf_endpoint_process_pdf__post"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/generate/podcast_async/": {
      "post": {
        "tags": [
          "generation"
        ],
        "summary": "Start Podcast Generation",
        "description": "Start asynchronous podcast generation with AI-powered content creation.\n\nInitiates podcast generation using provided content sources. Returns task ID \nfor tracking progress and status URL for monitoring.",
        "operationId": "generate_podcast_async_endpoint_generate_podcast_async__post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PodcastRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/podcast/{podcast_id}/audio": {
      "get": {
        "tags": [
          "playback"
        ],
        "summary": "Stream Podcast Audio",
        "description": "Stream or download completed podcast audio with embedded web player.\n\nProvides access to final generated podcast audio file with playback controls.",
        "operationId": "get_podcast_audio_podcast__podcast_id__audio_get",
        "parameters": [
          {
            "name": "podcast_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Podcast Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/privacy-policy": {
      "get": {
        "tags": [
          "content"
        ],
        "summary": "View Privacy Policy",
        "description": "View the MySalonCast privacy policy.\n\nReturns the full text of the privacy policy.",
        "operationId": "get_privacy_policy_privacy_policy_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/status/{task_id}": {
      "get": {
        "tags": [
          "status"
        ],
        "summary": "Get Task Status",
        "description": "Get detailed status of podcast generation task with progress updates.\n\nProvides current phase, progress percentage, and available artifacts.",
        "operationId": "get_task_status_status__task_id__get",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Task Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PodcastStatus"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
